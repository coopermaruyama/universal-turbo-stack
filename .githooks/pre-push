#!/usr/bin/env bash

set -e

echo "Running pre-commit hook..."

# Run lint check
echo "üîç Running linter..."
if ! pnpm lint; then
    echo "‚ùå Linting failed. Please fix the issues and try again."
    echo "   You can run 'pnpm lint --write' to fix some issues automatically."
    exit 1
fi

# Run type check
echo "üîß Running type check..."
if ! pnpm typecheck; then
    echo "‚ùå Type checking failed. Please fix the issues and try again."
    exit 1
fi

# Run format check
echo "‚ú® Running format check..."
if ! pnpm format; then
    echo "‚ùå Formatting failed. Please fix the issues and try again."
    echo "   You can run 'pnpm format --fix' to fix most issues automatically."
    exit 1
fi

# Check .env files for encryption
echo "üîê Checking .env files for encryption..."
env_files=("apps/*/.env.development" "apps/*/.env.production")
for env_file in "${env_files[@]}"; do
    if [ -f "$env_file" ]; then
        if ! grep -q "encrypted" "$env_file"; then
            echo "‚ùå $env_file does not contain 'encrypted'. Environment files must be encrypted."
            echo ""
            echo "  Please run 'make env-encrypt-dev or make env-encrypt-prod' to encrypt your environment files"
            echo ""
            exit 1
        fi
        echo "‚úì $env_file is encrypted."
    else
        echo "‚ö†Ô∏è  $env_file not found, skipping encryption check"
    fi
done

echo "‚úÖ All checks passed! Proceeding with commit."