{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/ui/*": ["./src/components/ui/*"],
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      // "@acme/ui/*": [
      //   "../../packages/ui/src/components/ui/*",
      //   "../../packages/ui/src/*"
      // ],
      // "react-native": [
      //   "react-native-web"
      // ],
      "react-native": ["react-native-web"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": [
    ".storybook/**/*",
    "*.ts",
    "*.tsx",
    "*.js",
    "./src/**/*",
    ".next/types/**/*.ts",
    // "../../packages/ui/src/**/*",
    "postcss.config.mjs"
  ],
  "exclude": ["node_modules"]
}
